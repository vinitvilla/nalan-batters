# Example Staging Environment Variables
# Copy this file to .env.staging and update with your actual values

NODE_ENV=staging

# Database - Use a separate staging database
DATABASE_URL=postgresql://username:password@localhost:5432/nalan-batters-staging?schema=public

# Firebase - Consider using a separate Firebase project for staging
FIREBASE_PROJECT_ID=nalan-batters-staging

# API Keys - Use staging/test keys
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_staging_google_maps_api_key

# App Configuration
NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_APP_NAME="Nalan Batters (Staging)"

# Feature Flags for staging
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_LOGGING=true

# Staging specific URLs
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXTAUTH_URL=http://localhost:3001

# Staging database connection for external tools
STAGING_DATABASE_URL=postgresql://username:password@localhost:5432/nalan-batters-staging?schema=public
