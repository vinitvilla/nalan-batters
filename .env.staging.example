# Staging Environment Variables — copy to .env.staging and fill in values.
# Set these in Vercel dashboard for the Preview/Staging environment.

# App
NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_APP_NAME="Nalan Batters (Staging)"
NEXT_PUBLIC_APP_URL=https://staging.nalanbatters.ca
NODE_ENV=production

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_staging_google_maps_api_key

# Firebase Client
NEXT_PUBLIC_FIREBASE_API_KEY=your_staging_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-staging-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-staging-project
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-staging-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_staging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_staging_app_id

# Firebase Admin (server-side)
FIREBASE_PROJECT_ID=your-staging-project
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-staging-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Database
# PRISMA_DATABASE_URL: Prisma Accelerate URL — used by the app at runtime (Vercel serverless)
PRISMA_DATABASE_URL=prisma+postgres://accelerate.prisma-data.net/?api_key=your_staging_accelerate_api_key
# PRISMA_MIGRATION_URL: Direct TCP connection — used only for migrations (prisma migrate deploy)
PRISMA_MIGRATION_URL=postgresql://username:password@host:5432/nalan-batters-staging?schema=public

# Google SEO & Places
GOOGLE_SITE_VERIFICATION=
GOOGLE_PLACES_API_KEY=
